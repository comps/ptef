#!/usr/bin/python3
import sys, os
libdir = os.path.join(os.environ['TEST_BINDIR'], 'python')
sys.path.append(libdir)
import ptef

import argparse
parser = argparse.ArgumentParser()
parser.add_argument('-a')
parser.add_argument('-A')
parser.add_argument('-j', type=int, default=1)
parser.add_argument('-i')
parser.add_argument('-v', action='store_true')
parser.add_argument('-m', action='store_true')
parser.add_argument('rest', nargs=argparse.REMAINDER)
args = parser.parse_args()
if len(args.rest) > 0 and args.rest[0] == '--':
    args.rest.pop(0)
if args.A:
    os.environ['PTEF_BASENAME'] = args.A
    args.a = args.A
if args.i:
    os.environ['PTEF_IGNORE_FILES'] = args.i
if args.v:
    os.environ['PTEF_NOLOGS'] = str(1)
flags = 0
if args.m:
    flags |= ptef.NOMERGE
ptef.runner(argv=args.rest, default_basename=args.a, jobs=args.j,
            flags=flags)
